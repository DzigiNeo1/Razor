@page
@model Razor.Pages.Categories.DeleteModel
@{
}
<form method="post">
    <input hidden asp-for="Category.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delete Category</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Category.Name">Name</label>
            <input asp-for="@Model.Category.Name" type="text" disabled class="form-control" />
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Category.DisplayOrder">Displayorder:</label>
            <input asp-for="@Model.Category.DisplayOrder" type="text" disabled class="form-control" />
        </div>
    </div>
    <button type="submit" style="width:150px;" class="btn btn-primary">Delete</button>
    <a asp-page="Index" style="width:150px;" class="btn btn-secondary">Back To List</a>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}