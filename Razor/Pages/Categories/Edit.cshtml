@page
@model Razor.Pages.Categories.EditModel
@{
}
<form method="post">
    <input hidden asp-for="Category.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Edit Category</h2>
            <hr/>
        </div>
        <div asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="@Model.Category.Name">Name</label>
            <input asp-for="@Model.Category.Name" type="text"  class="form-control" />
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="@Model.Category.DisplayOrder">Displayorder:</label>
            <input asp-for="@Model.Category.DisplayOrder" type="text"  class="form-control" />
            <span asp-validation-for="Category.DisplayOrder" class="text-danger"></span>
        </div>
    </div>
        <button type="submit" style="width:150px;" class="btn btn-primary">Update</button>

</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}